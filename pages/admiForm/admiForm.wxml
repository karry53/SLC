<view class="admiForm">
  <view class="form-list">

    <view class="form-item">
      <view class="item-box">
        <view class="item-triangle"></view>
        <view class="item-title"> 导生姓名：</view>
      </view>
      <input bindinput="inputMentorName" placeholder="请输入导生姓名" class="item-input" />
    </view>

    <view class="form-item">
      <view class="item-box">
        <view class="item-triangle"></view>
        <view class="item-title"> 导生课程：</view>
      </view>
      <input bindinput="inputCourse" placeholder="请输入导生课程名称" class="item-input" />
    </view>

    <view class="form-item">
      <view class="item-box">
        <view class="item-triangle"></view>
        <view class="item-title"> 课程日期：</view>

        <picker mode="date" start="{{start}}" end="{{end}}" value="{{date}}" bindchange="bindDateChange">
          <view class="picker">
            {{date}}<text wx:if="{{!date}}">点击选择</text>
          </view>

        </picker>
      </view>

    </view>

    <view class="form-item" style="display: flex;">
      <view class="item-box">
        <view class="item-triangle"></view>
        <view class="item-title"> 课程时间：</view>
      </view>

      <view class="item-picker">
        <picker mode="time" start="08:00" end="22:00" value="{{startTime}}" bindchange="bindTimeChange" data-type="startTime">
          <view class="picker">
            {{startTime}}-
          </view>

        </picker>
        <picker mode="time" start="08:00" end="22:00" value="{{endTime}}" bindchange="bindTimeChange" data-type="endTime">
          <view class="picker">
            {{endTime}}
          </view>
        </picker>
      </view>
      
    </view>

    <view class="form-item">
      <view class="item-box">
        <view class="item-triangle"></view>
        <view class="item-title"> 导生个人会议号：</view>
      </view>
      <input bindinput="inputConNumber" placeholder="请输入导生个人会议号" class="item-input" />
    </view>

    <button bindtap="submitMsg" class="submit">录入信息</button>


  </view>
</view>