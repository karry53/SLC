<view class="page">

  <view class="header">
    <view class="header-title">欢迎登陆管理系统</view>
  </view>

  <view class="form">
    <view class="login-type">
      <view class="teacher-btn {{teacherActive ? 'active' : ''}}" bindtap="switchToTeacher">教师</view>
      <view class="student-btn {{!teacherActive ? 'active' : ''}}" bindtap="switchToStudent">导生</view>
    </view>

    <form bindsubmit="submitLogin">
      <input class="login-input" type="text" value="" :maxlength="11" placeholder="请输入您的账号/姓名" placeholder-class="input-placeholder" name="account" />

      <input class="login-input" type="text" password value="" placeholder="请输入您的登录密码" placeholder-class="input-placeholder" name="password" />

      <button formType="submit" class="submit-login">提交</button>
    </form>
    <!-- <view class="registration">注册</view> -->
    <navigator url="../registration/registration" class="registration">注册</navigator>
  </view>
</view>